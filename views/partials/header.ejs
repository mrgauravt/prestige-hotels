<!DOCTYPE>
<html>

<head>
    <!-- Make site responsive on mobile/tablet -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Prestige Hotels</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
    <link rel="icon" href="/icon/crown.png">
</head>

<body>
    <div id="particles-js"></div>
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a class="navbar-brand" href="/">Prestige Hotels</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="<%= typeof page !== 'undefined' && page === 'hotel' ? 'active' : '' %>">
                        <a href="/hotel_list">Home</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <% if(!currentUser){ %>
                        <li class="<%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>">
                            <a href="/login">
                                <strong>Login </strong>
                                <i class="fas fa-user fa-lg"></i>
                            </a>
                        </li>
                        <li class="<%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>">
                            <a href="/register">
                                <strong>Sign Up </strong>
                                <i class="fas fa-user-plus fa-lg"></i>
                            </a>
                        </li>
                        <% } else { %>
                            <li>
                                <a href="#">
                                    <strong>Signed In As </strong>
                                    <em>
                                        <%= currentUser.username %>
                                    </em>
                                </a>
                            </li>
                            <li>
                                <a href="/logout">
                                    <strong>Sign Out </strong>
                                    <i class="fas fa-sign-out-alt fa-lg"></i>
                                </a>
                            </li>
                            <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <% if(error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
            <% } %>
                <% if(success && success.length > 0){ %>
                    <div class="alert alert-success" role="alert">
                        <%= success %>
                    </div>
                    <% } %>
    </div>
    <div class="container">